<div class="navbar navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      {{#linkTo app.home class="brand"}}
        {{unbound App.display_name}}
      {{/linkTo}}
      <div class="nav-collapse collapse">
        <ul class="nav">
          {{#linkTo "app.home" tagName="li"}}
            <a {{bindAttr href="view.href"}}>
              <i class="icon-home"></i>  
              Home
            </a>
          {{/linkTo}}
          {{#linkTo shows tagName="li"}}
            <a {{bindAttr href="view.href" }}>
              <i class="icon-star"></i>  
              Favorite Shows
            </a>
          {{/linkTo}}
          <li class="dropdown visible-phone">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              {{App.author}}
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <a href="#">Logout</a>
              </li>
            </ul>
          </li>
        </ul>
        <div class="muted pull-right dropdown hidden-phone">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="icon-user"></i>
            {{App.author}}
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li>
              <a href="#">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
