<h3>My Favorite TV Shows</h3>
{{#linkTo shows.add class="btn btn-small btn-info"}}
	<i class="icon-plus-sign"></i> Add
{{/linkTo}}
<table class="table table-hover">
	<thead>
		<tr>
			<th>Title</th>
			<th>Network</th>
			<th>Category</th>
			<th>Year</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{{#each show in controller}}
		<tr>
			<td>
				{{show.title}}
			</td>
			<td>
				{{show.network}}
			</td>
			<td>
				{{show.category}}
			</td>
			<td>
				{{show.year}}
			</td>
			<td>
				{{#linkTo show show class="btn btn-small"}}
					<i class="icon-eye-open"></i> <span class="visible-desktop">Details</span>
				{{/linkTo}}
				{{#linkTo show.edit show class="btn btn-small"}}
					<i class="icon-edit"></i> <span class="visible-desktop">Edit</span>
				{{/linkTo}}
				{{#linkTo show.remove show class="btn btn-small btn-warning"}}
					<i class="icon-remove"></i> <span class="visible-desktop">Remove</span>
				{{/linkTo}}
			</td>
		</tr>
		{{else}}
		<tr>
			<td colspan="5">
				<div class="well">
					No record could be found
				</div>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>